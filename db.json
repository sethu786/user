
{
    "/api/articles": {
      "GET": {
        "action": "db.articles"
      },
      "POST": {
        "action": "db.articles.push(req.body)",
        "path": "/api/articles"
      }
    },
    "/api/articles/:id": {
      "GET": {
        "action": "db.articles.find(data => data.id == :id)"
      },
      "PUT": {
        "action": "db.articles.find(data => data.id == :id).completed = true"
      },
      "DELETE": {
        "action": "db.articles = db.articles.filter(data => data.id != :id)"
      }
    }
  }
